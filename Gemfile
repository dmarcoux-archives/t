source 'https://rubygems.org'

gem 'rails', '~> 5.1.4'

# Interface to PostgreSQL
gem 'pg', '~> 0.21'

# Simple, fast, threaded, and highly concurrent HTTP 1.1 server
gem 'puma', '~> 3.10.0'

